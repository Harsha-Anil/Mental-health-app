<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Music"
    android:background="#784FC3">


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heading"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:gravity="center"
            android:text="Cool Off..!"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="30dp"
            android:layout_marginTop="25dp" />
    </TableRow>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="206dp"
                android:layout_height="144dp"
                android:layout_row="1"
                app:srcCompat="@drawable/upbeat" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="204dp"
                android:layout_height="match_parent"
                android:layout_row="2"
                app:srcCompat="@drawable/motive" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/upb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:text="Up that beat"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/mot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:text="Feel Motivated"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>

        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="18dp">

    </TableRow>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="208dp"
                android:layout_height="144dp"
                android:layout_row="1"
                app:srcCompat="@drawable/sigma" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="217dp"
                android:layout_height="match_parent"
                android:layout_row="2"
                app:srcCompat="@drawable/phok" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:text="Become The Sigma"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/pho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:text="Vent with PhonK"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal" />

        </TableRow>

    </TableLayout>


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_140sdp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_background"
            app:itemIconSize="30dp"
            app:itemIconTint="@drawable/item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_bar"/>
    </TableRow>




</TableLayout>